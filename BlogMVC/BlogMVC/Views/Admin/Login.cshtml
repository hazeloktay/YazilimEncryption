@{
    Layout = null;
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Login.css" />
</head>
<body>
    <form class="login-form" action="/Admin/Login" method="post">
        <div class="login-wrap">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
                <div class="login-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="user" class="label">Username</label>
                            <input id="username" type="text" name="username" placeholder="Enter username" class="input">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Password</label>
                            <input id="pass" type="password" name="pass" placeholder="Enter password" class="input" data-type="password">
                        </div>
                        <div class="group">
                            <input id="ckb1" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span> Keep me Signed in</label>
                        </div>
                        <div>
                            <p style="color:red">@ViewBag.Error</p>
                        </div>
                        <div class="group">
                            <input type="submit" class="button" value="Login">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a href="#forgot">Forgot Password?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>