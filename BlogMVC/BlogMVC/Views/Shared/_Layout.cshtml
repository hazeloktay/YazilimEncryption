<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" type="text/css" href="~/Content/Blog/assets/css/main.css" />
    <noscript><link rel="stylesheet" type="text/css" href="~/Content/Blog/assets/css/noscript.css" /></noscript>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="is-loadings">
    <!-- Wrapper -->
    <div id="wrapper" class="fade-in">

        <!-- Intro -->
        <div style="text-align:center">
            <div>
                <h1 style="color:aliceblue">
                    Hazel Oktay
                </h1>
                <h6 style="color:aliceblue">
                    Yazılım Mühendisi
                </h6><br /><br />
            </div>
        </div>

        <!-- Nav -->
        <nav id="nav">
            <ul class="links">
                <li class="active"><a href="~/Blog/Index">Anasayfa</a></li>
                <li><a href="~/Blog/About">Hakkımızda</a></li>
                <li><a href="~/Blog/Contact">İletişim</a></li>
            </ul>
            <ul class="icons">
                <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                <li><a href="#" class="icon fa-github"><span class="label">GitHub</span></a></li>
            </ul>
        </nav>

        <div class="container body-content">
            @RenderBody()
            <hr />

            <!-- Footer -->
            <footer id="footer">
                <section class="split contact">
                    <section>
                        <h3>Social</h3>
                        <ul class="icons alt">
                            <li><a href="#" class="icon alt fa-twitter"><span class="label">Twitter</span></a></li>
                            <li><a href="#" class="icon alt fa-facebook"><span class="label">Facebook</span></a></li>
                            <li><a href="#" class="icon alt fa-instagram"><span class="label">Instagram</span></a></li>
                            <li><a href="#" class="icon alt fa-github"><span class="label">GitHub</span></a></li>
                        </ul>
                    </section>
                </section>
            </footer>

            <!-- Copyright -->
            <div id="copyright">
                <ul><li>Hazel Oktay | @DateTime.Now.Year</li></ul>
            </div>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- Scripts -->
    <script src="~/Content/Blog/assets/js/jquery.min.js"></script>
    <script src="~/Content/Blog/assets/js/jquery.scrollex.min.js"></script>
    <script src="~/Content/Blog/assets/js/jquery.scrolly.min.js"></script>
    <script src="~/Content/Blog/assets/js/skel.min.js"></script>
    <script src="~/Content/Blog/assets/js/util.js"></script>
    <script src="~/Content/Blog/assets/js/main.js"></script>

</body>
</html>