<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/zabuto_calendar.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/js/gritter/css/jquery.gritter.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/lineicons/style.css">

    <!-- Custom styles for this template -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">
    <link href="~/Content/assets/css/style-responsive.css" rel="stylesheet">

    <script src="~/Content/assets/js/chart-master/Chart.js"></script>

    <link rel="stylesheet"
          type="text/css"
          href="~/Content/jquery-confirm.css" />
    <script type="text/javascript"
            src="~/Scripts/jquery-confirm.js"></script>
</head>
<body>
    <header class="header black-bg">
        <div class="sidebar-toggle-box">
            <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
        <!--logo start-->
        <a href="~/Admin/Index" class="logo"><b>My Blog</b></a>
        <!--logo end-->
    </header>
    <!-- **********************************************************************************************************************************************************
    MAIN SIDEBAR MENU
    *********************************************************************************************************************************************************** -->

    <aside>
        <div id="sidebar" class="nav-collapse ">
            <!-- sidebar menu start-->
            <ul class="sidebar-menu" id="nav-accordion">


                <h5 class="centered">@Session["Username"]</h5>

                <li class="mt">
                    <a class="active" href="~/Admin/Index">
                        <i class="fa fa-dashboard"></i>
                        <span>Anasayfa</span>
                    </a>
                </li>

                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-file"></i>
                        <span>Yazılar</span>
                    </a>
                    <ul class="sub">
                        <li><a href="~/Admin/TextList/1">Tüm Yazıları Gör</a></li>
                        <li><a href="~/Admin/TextAdd">Yazı Ekle</a></li>
                    </ul>
                </li>

                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-users"></i>
                        <span>Admin İşlemleri</span>
                    </a>
                    <ul class="sub">
                        <li><a href="~/Admin/AdminList">Admin Listesi</a></li>
                        <li><a href="~/Admin/AdminAdd">Admin Ekle</a></li>
                    </ul>
                </li>

                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-users"></i>
                        <span>Blog</span>
                    </a>
                    <ul class="sub">
                        <li><a href="~/Blog/Index">Blog</a></li>
                       
                    </ul>
                </li>

                <li class="mt">
                    <a class="" href="/Admin/Logout">
                        <i class="fa fa-sign-out"></i>
                        <span>Logout</span>
                    </a>
                </li>


            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="site-footer">
        <div class="text-center">
            2021
            <a href="~/Admin/Index" class="go-top">
                <i class="fa fa-angle-up"></i>
            </a>
        </div>
    </footer>
    <!--footer end-->
    <!-- js placed at the end of the document so the pages load faster -->
    <!--AJAX Kullanımı için gerekli js dosyaları-->

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/js/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script class="include" type="text/javascript" src="~/Content/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/assets/js/jquery.scrollTo.min.js"></script>
    <script src="~/Content/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Content/assets/js/jquery.sparkline.js"></script>


    <!--common script for all pages-->
    <script src="~/Content/assets/js/common-scripts.js"></script>

    <script type="text/javascript" src="~/Content/assets/js/gritter/js/jquery.gritter.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/gritter-conf.js"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/jquery-confirm.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>